generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Upload {
  id          Int          @id @default(autoincrement())
  firstName   String
  lastName    String
  password    String
  createdAt   DateTime     @default(now())
  houses      House[]
  Stats       Stats[]

  World World[]

  grayZone      grayZone[]
  environmentId Int?
}

model House {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  owner       Upload @relation(fields: [ownerId], references: [id])
  features Features[]
  ownerId     Int
}

model Features {
  id            Int         @id @default(autoincrement())
  name          String
  house House[]
  environmentId Int
}

model Stats {
  id        Int      @id @default(autoincrement())
  uploads   Upload   @relation(fields: [uploadId], references: [id])
  uploadId  Int
  type      String
  value     Float
  createdAt DateTime @default(now())
}

model World {
  id       Int    @id @default(autoincrement())
  uploads  Upload @relation(fields: [uploadId], references: [id])
  uploadId Int
}

model grayZone {
  id       Int    @id @default(autoincrement())
  uploads  Upload @relation(fields: [uploadId], references: [id])
  uploadId Int
}
